// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}



model User {
  id          String    @id @default(uuid())
  email       String    @unique
  username    String?   @unique
  password    String?   // Optional because Google users might not have a password
  googleId    String?   @unique
  name        String?
  vibeAccess  Boolean   @default(false) // Grant access to Vibe Agent (set manually in DB)
  projects    Project[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Project {
  id        String   @id @default(uuid())
  name      String
  type      String   @default("grafcet") // "grafcet" or "gemma"
  localPath String?  // Optional path if using Flydrive file storage
  content   String?  // Optional JSON content if storing in DB (small projects)
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactMessage {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model DemoAccessRequest {
  id        String   @id @default(uuid())
  userId    String?  // Optional: if user is logged in
  email     String
  name      String?
  status    String   @default("pending") // pending, approved, rejected
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
